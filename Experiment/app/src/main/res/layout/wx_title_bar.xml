<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wx_action_bar_default">

    <RelativeLayout
        android:id="@+id/rl_back_arrow_container"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/selector_left_arrow_bg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@drawable/selector_left_arrow" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/wx_action_bar_pressed" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_up_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/rl_back_arrow_container"
        android:gravity="center_vertical"
        android:text="图片"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>